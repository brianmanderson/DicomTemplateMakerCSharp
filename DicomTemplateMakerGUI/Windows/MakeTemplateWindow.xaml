<Window x:Class="DicomTemplateMakerGUI.Windows.MakeTemplateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DicomTemplateMakerGUI.Windows"
        mc:Ignorable="d"
        Title="MakeTemplateWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Select RT Structure" HorizontalAlignment="Left" Margin="23,40,0,0" VerticalAlignment="Top" Click="Select_File_Click" Height="37" Width="137"/>
        <Label Name="FileLocationLabel" Content="" HorizontalAlignment="Left" Height="37" Margin="165,40,0,0" VerticalAlignment="Top" Width="587"/>
        <Label Name="TemplateNameLabel" Content="Template Name:" HorizontalAlignment="Left" Height="37" Margin="41,95,0,0" VerticalAlignment="Top" Width="101"/>
        <TextBox x:Name="TemplateTextBox" TextChanged="TemplateNameChanged" HorizontalAlignment="Left" Height="41" Margin="165,91,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="379"/>
        <Button x:Name="BuildButton" Content="Build!" HorizontalAlignment="Left" Height="39" Margin="563,92,0,0" VerticalAlignment="Top" Width="137" Click="Build_Button_Click" IsEnabled="False"/>
        <Button x:Name="UpdateButton" Content="Save Changes" HorizontalAlignment="Left" Height="39" Margin="314,154,0,0" VerticalAlignment="Top" Width="137" Click="Save_Changes_Click" IsEnabled="False"/>
        <ScrollViewer VerticalScrollBarVisibility="Visible" Margin="0,198,0,0">
            <StackPanel Margin="23,27,41,88" x:Name="ROIStackPanel">
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
